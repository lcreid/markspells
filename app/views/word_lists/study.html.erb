<% title "Study a List of Words" %>
<h1><%= @word_list.title %></h1>

<div id="study-list">
	<table id="study-list">
	<% @word_list.for_study(3).each do |word_row| %>
		<tr>
			<% word_row.each do |word| %>
				<td><%= word %></td>
			<% end %>
		</tr>
	<% end %>
	</table>
	</div>
	<div class="links">
	<p>
		<%= link_to 'Practice this list', practice_word_list_path(@word_list), :class => "button" %>
		<%= link_to "Back", :back, :class => "button" %>
	</p>
</div>
