<% title "View Lists of Words" %>
<h1>Choose a spelling list</h1>

<div id="word-list-list">
  <table id="word-list">
    <thead>
    <tr>
	    <td>Title</td>
	    <td>Due</td>
	    <td>Status</td>
	    <td>Started</td>
	    <td>Finished</td>
	    <td></td>
	    <td></td>
	    <td></td>
	    <td></td>
	    <td></td>
    </tr>
    </thead>
    <tbody>
    <% @word_lists.each do |word_list| %>
      <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
        <td><%= word_list.title %></td>
        <td><%= word_list.due_date %></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'Practice', practice_word_list_path(word_list.id) %></td>
        <td><%= link_to 'Study', study_word_list_path(word_list.id) %></td>
        <td><%= link_to 'Progress', cuadrant_word_list_path(word_list.id) %></td>
        <td><%= link_to 'Review', review_assignment_word_list_path(word_list.id) %></td>
        <td><%= link_to 'Edit', edit_word_list_path(word_list.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Add a New Word List', new_word_list_path %>

